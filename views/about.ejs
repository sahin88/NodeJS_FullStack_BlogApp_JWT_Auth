<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/nav.ejs') %>
                <!-- action="/blog/create", method="POST" -->
   
            <form id='form' class="division-section-form" >
                <div class="division-section-form-inner">
                <div class="form-group">
                <label for="title">Post Title</label>
                <input type="text" id ='title' name='title' placeholder="Post Title">
                </div>
                <div class="form-group"> 
                    <label for="content">Post  Content</label>
                    <textarea id="content" name="content" rows="10" cols="10"></textarea>

                </div>

                <div class="form-group"> 
                    <input type="submit" value="Send">
                </div>
            </div>
            </form>

    <script>

        const form = document.getElementById('form')
        form.addEventListener('submit', (e) => {
            console.log("accesstoken", )
            e.preventDefault()
     
        const formData = new FormData(form)
        const headers={'Accept': 'application/json',
                        'auth-token':localStorage.getItem('accesstoken')}

        console.log("formData", formData.get('content'))
      
        fetch('http://localhost:3000/blog/create', {
            method: 'POST',
           headers:headers,
            body: formData,
        }).then((response)=>{console.log("response", response).catch((error)=>{console.log(error)})})
        })

    </script>

    

</body>

</html>